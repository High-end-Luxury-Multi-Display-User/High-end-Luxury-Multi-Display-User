<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content Area -->
    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="3.2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:id="@+id/dashboard_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <FrameLayout
            android:id="@+id/navigation_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/sidebar_background"
            android:paddingVertical="40dp">

            <ImageView
                android:id="@+id/icon_home"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="70dp"
                android:background="@drawable/icon_background"
                android:contentDescription="Home"
                android:padding="8dp"
                android:src="@drawable/ic_home" />

            <ImageView
                android:id="@+id/icon_car"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginBottom="70dp"
                android:background="@drawable/icon_background"
                android:contentDescription="Car"
                android:padding="8dp"
                android:src="@drawable/ic_car" />

            <ImageView
                android:id="@+id/icon_settings"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/icon_background"
                android:contentDescription="Settings"
                android:padding="8dp"
                android:src="@drawable/ic_settings" />

        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Control Bar -->
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bottombar_background"
        android:elevation="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/engine_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Engine"
                android:src="@drawable/ic_enginegood" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/drowsiness_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Drowsiness"
                android:src="@drawable/ic_drowsiness"
                app:tint="#a47cc4" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/volume_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Volume"
                android:src="@drawable/ic_volume"
                app:tint="#a47cc4" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/light_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Light"
                android:src="@drawable/ic_light"
                app:tint="#a47cc4" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fuel_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Fuel"
                android:src="@drawable/fuelgood" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>