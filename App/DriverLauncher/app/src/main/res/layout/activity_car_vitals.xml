<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Top Control Bar -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bottombar_background"
        android:elevation="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/driver_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.4"
            android:background="@drawable/ellipse"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/user_profile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:contentDescription="Fuel"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="80dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="24dp"
                android:layout_height="match_parent"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/luxoft"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:contentDescription="Engine"
                android:src="@drawable/luxoft_logo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical">

           <TextView
                android:id="@+id/time"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:layout_height="40dp"/>

        </LinearLayout>
    </LinearLayout>

    <!-- Main Content Area -->
    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="3.2"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        app:layout_constraintBottom_toTopOf="@id/bottom_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Left Top Fragment -->
        <FrameLayout
            android:id="@+id/batteryContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!-- Main Center Fragment -->
        <FrameLayout
            android:id="@+id/mainFragmentContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!-- Right Fragment -->
        <FrameLayout
            android:id="@+id/rightFragmentContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <!-- Right bar -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/sidebar_background"
            android:paddingVertical="40dp">

            <ImageView
                android:id="@+id/icon_home"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginBottom="70dp"
                android:contentDescription="Home"
                android:padding="8dp"
                android:src="@drawable/ic_home" />

            <ImageView
                android:id="@+id/icon_car_vitals"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="70dp"
                android:background="@drawable/filled_ellipse"
                android:contentDescription="Car"
                android:padding="8dp"
                android:src="@drawable/ic_car" />

            <ImageView
                android:id="@+id/icon_settings"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/icon_background"
                android:contentDescription="Settings"
                android:padding="8dp"
                android:src="@drawable/ic_settings" />

        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Control Bar -->
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/bottombar_background"
        android:elevation="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/engine_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Engine"
                android:src="@drawable/ic_enginegood" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/drowsiness_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Drowsiness"
                android:src="@drawable/ic_drowsiness"
                app:tint="#a47cc4" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/volume_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Volume"
                android:src="@drawable/ic_volume"
                app:tint="#a47cc4" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/light_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/light_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:contentDescription="Light"
                android:src="@drawable/ic_led_off"
                app:tint="#a47cc4" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fuel_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Fuel"
                android:src="@drawable/fuelgood" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
