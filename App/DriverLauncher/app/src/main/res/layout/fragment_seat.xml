<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/seatFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_whole_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Top Title -->

        <TextView
            android:id="@+id/seatTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="SEAT"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/seatSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADJUSTMENT"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/manualModeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MANUAL MODE"
            android:textSize="14sp"
            android:textColor="#AAAAAA"
            android:layout_marginBottom="16dp" />

        <!-- Seat Area -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frameLayout"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginBottom="12dp">

            <!-- Backrest (Rotatable Part) -->

            <!-- Base of Seat -->


            <ImageButton
                android:id="@+id/btnReverse"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="108dp"
                android:background="@null"
                android:src="@drawable/ic_arrow_forward"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btnForward"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:background="@null"
                android:src="@drawable/ic_arrow_back"
                app:layout_constraintEnd_toStartOf="@+id/angleText"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/backrestImage"
                android:layout_width="109dp"
                android:layout_height="250dp"
                android:layout_marginEnd="32dp"
                android:scaleType="fitCenter"
                android:src="@drawable/backrest"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/backrestForward"
                android:layout_width="169dp"
                android:layout_height="416dp"
                android:scaleType="fitCenter"
                android:src="@drawable/backrest_forward"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.757"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.497" />

            <ImageView
                android:id="@+id/backrestReverse"
                android:layout_width="165dp"
                android:layout_height="240dp"
                android:scaleType="fitCenter"
                android:src="@drawable/backrest_reverse"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/baseSeatImage"
                android:layout_width="154dp"
                android:layout_height="126dp"
                android:layout_marginTop="132dp"
                android:scaleType="fitCenter"
                android:src="@drawable/base_seat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.166"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/angleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginTop="40dp"
                android:text="70Â°"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Angle Text -->

        <!-- Vertical Arrow Controls -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
