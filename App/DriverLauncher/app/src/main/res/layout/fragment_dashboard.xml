<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginEnd="5dp"
    android:padding="8dp">

    <!-- CardView for AwesomeSpeedometer -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="26dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#000000"
        android:layout_marginBottom="8dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

            <com.github.anastr.speedviewlib.AwesomeSpeedometer
            android:id="@+id/speedView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:sv_maxSpeed="240"
            app:sv_unitTextSize="14dp"
            app:sv_unit="Km/h"
            app:sv_speedTextSize="32sp"
            app:sv_startDegree="143"
            app:sv_endDegree="397"
            app:sv_speedTextColor="#FFFFFF"
            app:sv_backgroundCircleColor="#000000"
            app:sv_speedometerColor="@color/luxoft_purple"
            app:sv_indicatorColor="@color/luxoft_purple"
            app:sv_trianglesColor="#000000"
            app:sv_withTremble="false" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/triangle"/>

    </FrameLayout>

    </androidx.cardview.widget.CardView>

    <!-- CardView for ImageView -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="26dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#000000">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/nav_car_night" />
    </androidx.cardview.widget.CardView>

</LinearLayout>