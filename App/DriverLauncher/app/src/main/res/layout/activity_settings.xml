<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingStart="300dp"
    android:paddingEnd="300dp"
    android:background="@drawable/settings_background">

    <!-- Theme Switch -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Theme"
            android:textSize="34sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/theme_switch"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:checked="false"
            android:textOn="Night"
            android:textOff="Day"
            android:padding="12dp"
            android:textSize="28sp"
            android:switchMinWidth="60dp"
            android:thumbTextPadding="16dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E0E0E0"
        android:layout_marginVertical="8dp" />

    <!-- Language Switch -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Language"
            android:textSize="34sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/language_switch"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:checked="false"
            android:textOn="Arabic"
            android:textOff="English"
            android:padding="12dp"
            android:textSize="24sp"
            android:switchMinWidth="60dp"
            android:thumbTextPadding="16dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E0E0E0"
        android:layout_marginVertical="8dp" />

    <!-- Gesture Control Switch -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gesture Control"
            android:textSize="34sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/gesture_switch"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:checked="false"
            android:textOn="On"
            android:textOff="Off"
            android:padding="12dp"
            android:textSize="24sp"
            android:switchMinWidth="60dp"
            android:thumbTextPadding="16dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E0E0E0"
        android:layout_marginVertical="8dp" />

    <!-- Voice Assist Switch -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Voice Assist"
            android:textSize="34sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/voice_switch"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:checked="false"
            android:textOn="On"
            android:textOff="Off"
            android:padding="12dp"
            android:textSize="24sp"
            android:switchMinWidth="60dp"
            android:thumbTextPadding="16dp" />
    </LinearLayout>
</LinearLayout>