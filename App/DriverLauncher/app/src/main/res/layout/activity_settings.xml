<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:weightSum="3.2"
    android:orientation="horizontal"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@id/bottom_bar"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/black_background"
        android:paddingStart="200dp"
        android:paddingEnd="200dp">

        <LinearLayout
            android:id="@+id/theme_container"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="25dp"
            android:background="@drawable/settings_background"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="60dp"
                android:text="Theme"
                android:textColor="@color/white"
                android:textSize="28sp"/>

            <ImageButton
                android:id="@+id/theme_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/day"
                android:layout_marginEnd="80dp"
                android:background="#00000000"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/gesture_container"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="25dp"
            android:background="@drawable/settings_background"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gesture Control"
                android:layout_marginStart="60dp"
                android:textColor="@color/white"
                android:textSize="28sp"/>

            <ImageButton
                android:id="@+id/gesture_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00000000"
                android:scaleType="centerCrop"
                android:layout_marginEnd="80dp"
                android:src="@drawable/gesture" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/voice_container"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="25dp"
            android:background="@drawable/settings_background"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Voice Assist"
                android:textColor="@color/white"
                android:layout_marginStart="60dp"
                android:textSize="28sp"/>

            <ImageButton
                android:id="@+id/voice_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00000000"
                android:scaleType="centerCrop"
                android:layout_marginEnd="75dp"
                android:src="@drawable/voice" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/language_container"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="25dp"
            android:background="@drawable/settings_background"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Language"
                android:textSize="28sp"
                android:textColor="@color/white"
                android:layout_marginStart="60dp"/>

            <ImageButton
                android:id="@+id/language_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00000000"
                android:scaleType="centerCrop"
                android:layout_marginEnd="75dp"
                android:src="@drawable/english" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/sidebar_background"
        android:paddingVertical="40dp">

        <ImageView
            android:id="@+id/icon_home"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/icon_background"
            android:contentDescription="Home"
            android:padding="8dp"
            android:src="@drawable/ic_home" />

        <ImageView
            android:id="@+id/icon_car"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/icon_background"
            android:contentDescription="Car"
            android:padding="8dp"
            android:src="@drawable/ic_car" />

        <ImageView
            android:id="@+id/icon_settings"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/filled_ellipse"
            android:contentDescription="Settings"
            android:padding="8dp"
            android:src="@drawable/ic_settings" />

    </LinearLayout>
</LinearLayout>
    <!-- Bottom Control Bar -->
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/bottombar_background"
        android:elevation="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/engine_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Engine"
                android:src="@drawable/ic_enginegood" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/drowsiness_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Drowsiness"
                android:src="@drawable/ic_drowsiness"
                app:tint="#a47cc4" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/volume_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Volume"
                android:src="@drawable/ic_volume"
                app:tint="#a47cc4" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/light_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Light"
                android:src="@drawable/ic_light"
                app:tint="#a47cc4" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fuel_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Fuel"
                android:src="@drawable/fuelgood" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>